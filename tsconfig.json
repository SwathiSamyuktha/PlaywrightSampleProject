{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": ".",
    "declaration": true,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": [
    "tests/**/*",
    "config/**/*",
    "page-objects/**/*",
    "fixtures/**/*",
    "utils/**/*",
    "playwright.config.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
